---
interface Props {
    title: string;
    description: string;
    tech: string[];
    href: string;
    image?: string;
    status?: 'In Progress' | 'Completed' | 'Prototype';
}

const { 
    title, 
    description, 
    tech, 
    href, 
    image = '/placeholders/project-placeholder.png',
    status = 'In Progress'
} = Astro.props;

const statusColors = {
    'In Progress': '#D4AF37',  // Gold
    'Completed': '#C0C0C0',    // Silver
    'Prototype': '#708090'     // Slate Gray
};
---

<div class="project-card">
    <div class="project-image-container">
        <img 
            src={image} 
            alt={`${title} project preview`} 
            class="project-image"
        />
        <div 
            class="project-status" 
            style={`background-color: ${statusColors[status]}`}
        >
            {status}
        </div>
    </div>
    <div class="project-details">
        <h3>{title}</h3>
        <p>{description}</p>
        <div class="project-tech">
            {tech.map((technology) => (
                <span class="tech-tag">{technology}</span>
            ))}
        </div>
        <div class="project-actions">
            <a href={href} target="_blank" class="btn btn-view">
                View Project
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15 3 21 3 21 9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
            </a>
        </div>
    </div>
</div>

<style>
    .project-card {
        display: flex;
        background: rgba(var(--accent-dark), 0.2);
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(var(--accent-light), 0.1);
    }

    .project-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .project-image-container {
        position: relative;
        width: 300px;
        flex-shrink: 0;
    }

    .project-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(20%) brightness(110%);
        transition: filter 0.3s ease;
    }

    .project-card:hover .project-image {
        filter: grayscale(0%) brightness(100%);
    }

    .project-status {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
        border-radius: 20px;
        color: white;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .project-details {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

    .project-details h3 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
    }

    .project-details p {
        color: var(--text-light);
        opacity: 0.8;
        margin-bottom: 1rem;
    }

    .project-tech {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .tech-tag {
        background: rgba(var(--accent-light), 0.1);
        padding: 0.25rem 0.5rem;
        border-radius: 20px;
        font-size: 0.8rem;
        color: var(--text-light);
    }

    .project-actions {
        display: flex;
        justify-content: flex-start;
    }

    .btn-view {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--primary-color);
        color: var(--background-dark);
        padding: 0.5rem 1rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background 0.3s ease;
    }

    .btn-view:hover {
        background: color-mix(in srgb, var(--primary-color) 80%, white);
    }

    .btn-view svg {
        width: 18px;
        height: 18px;
    }
</style>
