---
import SocialLinks from './SocialLinks.astro';
---

<section id="about" class="about-section">
    <div class="section-header">
        <h2 class="section-title">Digital Architect</h2>
        <div class="divider"></div>
    </div>

    <div class="about-content">
        <div class="profile-container">
            <div class="avatar-frame">
                <img 
                    src="/images/mikey-shaw.png" 
                    alt="Michael Shaw" 
                    class="profile-image"
                    loading="lazy"
                />
            </div>
            <div class="hero-socials">
                <SocialLinks />
            </div>
        </div>

        <div class="about-text">
            <h3>Michael Shaw</h3>
            <p>
                A visionary Digital Architect specializing in AI, automation, and innovative technology solutions. 
                With a passion for transforming complex challenges into streamlined, intelligent systems, 
                I leverage cutting-edge technologies to drive business growth and operational efficiency.
            </p>
            <div class="contact-info">
                <p><strong>Email:</strong> <a href="mailto:michael@madezmedia.co" class="email-link">michael@madezmedia.co</a></p>
            </div>
        </div>
    </div>
</section>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700&display=swap');

    .about-section {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 2rem;
        background: rgba(var(--accent-dark), 0.1);
        border-radius: 12px;
        border: 1px solid rgba(var(--accent-light), 0.1);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .divider {
        flex-grow: 1;
        height: 2px;
        background: linear-gradient(to right, var(--primary-color), transparent);
    }

    .about-content {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
        align-items: center;
    }

    .profile-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .avatar-frame {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid var(--primary-color);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

    .avatar-frame:hover {
        transform: scale(1.05);
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-socials {
        margin-top: 1.5rem;
    }

    .about-text {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .about-text h3 {
        color: var(--primary-color);
        font-size: 2rem;
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .about-text p {
        color: var(--secondary-color);
        line-height: 1.6;
    }

    .contact-info {
        margin-top: 1rem;
        background: rgba(var(--accent-light), 0.05);
        padding: 1rem;
        border-radius: 8px;
    }

    .email-link {
        color: var(--primary-color);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .email-link:hover {
        color: white;
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .about-content {
            grid-template-columns: 1fr;
        }

        .avatar-frame {
            width: 250px;
            height: 250px;
        }
    }
</style>
