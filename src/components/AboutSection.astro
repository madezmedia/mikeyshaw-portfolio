---
import SocialLinks from './SocialLinks.astro';
---

<section id="about" class="about-section">
    <div class="section-header">
        <h2 class="section-title">Digital Architect</h2>
        <div class="divider"></div>
    </div>

    <div class="about-content">
        <div class="profile-container">
            <div class="avatar-frame theme-hover">
                <img 
                    src="/images/mikey-shaw.png" 
                    alt="Michael Shaw" 
                    class="profile-image animate-subtle-scale"
                    loading="lazy"
                />
            </div>
            <div class="hero-socials">
                <SocialLinks />
            </div>
        </div>

        <div class="code-container theme-hover">
            <div class="line-numbers">
                {Array.from({ length: 10 }, (_, i) => (
                    <span class="line-number">{i + 1}</span>
                ))}
            </div>
            <pre class="about-snippet"><code>
<span class="line"><span class="keyword">class</span> <span class="class-name">DigitalArchitect</span> {</span>
<span class="line">    <span class="method">constructor</span>() {</span>
<span class="line">        <span class="comment">// Visionary technology solutions</span></span>
<span class="line">        <span class="keyword">this</span>.<span class="property">profile</span> = {</span>
<span class="line">            <span class="string">'name'</span>: <span class="string">'Michael Shaw'</span>,</span>
<span class="line">            <span class="string">'expertise'</span>: [</span>
<span class="line">                <span class="string">'AI'</span>,</span>
<span class="line">                <span class="string">'Automation'</span>,</span>
<span class="line">                <span class="string">'Innovative Solutions'</span></span>
<span class="line">            ]</span>
<span class="line">        };</span>
<span class="line">    }</span>
<span class="line"></span>
<span class="line">    <span class="method">transform</span>() {</span>
<span class="line">        <span class="keyword">return</span> <span class="string">'Complex Challenges â†’ Intelligent Systems'</span>;</span>
<span class="line">    }</span>
<span class="line">}</span>
</code></pre>
        </div>
    </div>
</section>

<style>
    :root {
        /* Dark Mode Variables */
        --about-bg-dark: #1E1E1E;
        --about-text-primary-dark: #E0E0E0;
        --about-text-secondary-dark: #C0C0C0;
        --about-accent-dark: #D4AF37;
        --about-code-line-dark: #2A2A2A;

        /* Light Mode Variables */
        --about-bg-light: #F1F3F5;
        --about-text-primary-light: #212529;
        --about-text-secondary-light: #495057;
        --about-accent-light: #28A745;
        --about-code-line-light: #F4F4F4;
    }

    .about-section {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 2rem;
        background: color-mix(in srgb, var(--bg-primary) 90%, transparent);
        border-radius: 12px;
        border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
        transition: all 0.3s ease;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary);
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .divider {
        flex-grow: 1;
        height: 2px;
        background: linear-gradient(to right, var(--primary), transparent);
    }

    .about-content {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
        align-items: center;
    }

    .profile-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .avatar-frame {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid var(--primary);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: 
            transform 0.3s ease, 
            box-shadow 0.3s ease;
    }

    .avatar-frame:hover {
        transform: scale(1.05);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-socials {
        margin-top: 1.5rem;
    }

    .code-container {
        display: flex;
        background: var(--about-bg-dark);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
        transition: 
            background 0.3s ease, 
            box-shadow 0.3s ease;
    }

    :root[data-theme='light'] .code-container {
        background: var(--about-bg-light);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .line-numbers {
        display: flex;
        flex-direction: column;
        background: var(--about-code-line-dark);
        color: var(--about-text-secondary-dark);
        padding: 1rem 0.5rem;
        text-align: right;
        user-select: none;
        opacity: 0.5;
        transition: 
            background 0.3s ease, 
            color 0.3s ease;
    }

    :root[data-theme='light'] .line-numbers {
        background: var(--about-code-line-light);
        color: var(--about-text-secondary-light);
    }

    .line-number {
        font-family: 'Courier New', monospace;
        font-size: 0.8rem;
        margin-right: 0.5rem;
    }

    .about-snippet {
        margin: 0;
        padding: 1rem;
        overflow-x: auto;
    }

    .about-snippet .line {
        display: block;
        white-space: nowrap;
    }

    .keyword { color: #569CD6; transition: color 0.3s ease; }
    .class-name { color: #4EC9B0; transition: color 0.3s ease; }
    .method { color: #DCDCAA; transition: color 0.3s ease; }
    .comment { color: #6A9955; opacity: 0.7; transition: color 0.3s ease; }
    .string { color: #CE9178; transition: color 0.3s ease; }
    .property { color: #9CDCFE; transition: color 0.3s ease; }

    :root[data-theme='light'] .keyword { color: #0000FF; }
    :root[data-theme='light'] .class-name { color: #267F99; }
    :root[data-theme='light'] .method { color: #795E26; }
    :root[data-theme='light'] .comment { color: #008000; }
    :root[data-theme='light'] .string { color: #A31515; }
    :root[data-theme='light'] .property { color: #001080; }

    @media (max-width: 768px) {
        .about-content {
            grid-template-columns: 1fr;
        }

        .avatar-frame {
            width: 250px;
            height: 250px;
        }
    }
</style>
