---
import CalEmbed from './CalEmbed';
---

<section id="lets-connect" class="lets-connect">
    <div class="section-header">
        <h2 class="section-title">Let's Connect</h2>
        <div class="divider"></div>
    </div>

    <div class="connect-content">
        <CalEmbed client:only="react" />
    </div>
</section>

<style>
    .lets-connect {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 2rem;
        background: rgba(var(--accent-dark), 0.1);
        border-radius: 12px;
        border: 1px solid rgba(var(--accent-light), 0.1);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .divider {
        flex-grow: 1;
        height: 2px;
        background: linear-gradient(to right, var(--primary-color), transparent);
    }

    .connect-content {
        width: 100%;
        border-radius: 8px;
        overflow: hidden;
        min-height: 700px;
        padding: 0;
    }

    /* Cal.com Embed Custom Styling */
    :global(.cal-embed) {
        --cal-brand-color: var(--primary-color);
        --cal-brand-text-color: var(--text-light);
        --cal-brand-background-color: var(--background-dark);
        padding: 0 !important;
        margin: 0 !important;
    }

    :global(.cal-embed iframe) {
        border: none !important;
        border-radius: 8px;
    }

    @media (max-width: 768px) {
        .lets-connect {
            margin: 2rem auto;
            padding: 1rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .connect-content {
            min-height: 500px;
        }
    }
</style>
