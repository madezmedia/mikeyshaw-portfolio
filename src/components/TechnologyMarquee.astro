---
import * as SimpleIcons from 'simple-icons';
import { UX_CONFIG } from '../utils/ux';

type Technology = {
    name: string;
    icon: { svg: string };
    color: string;
};

const technologies: Technology[] = [
    { name: 'TypeScript', icon: SimpleIcons.siTypescript, color: '#3178C6' },
    { name: 'React', icon: SimpleIcons.siReact, color: '#61DAFB' },
    { name: 'Next.js', icon: SimpleIcons.siNextdotjs, color: '#000000' },
    { name: 'Node.js', icon: SimpleIcons.siNodedotjs, color: '#339933' },
    { name: 'Python', icon: SimpleIcons.siPython, color: '#3776AB' },
    { name: 'Supabase', icon: SimpleIcons.siSupabase, color: '#3ECF8E' },
    { name: 'OpenAI', icon: SimpleIcons.siOpenai, color: '#412991' },
    { name: 'Vercel', icon: SimpleIcons.siVercel, color: '#000000' },
    { name: 'Stripe', icon: SimpleIcons.siStripe, color: '#635BFF' },
    { name: 'Prisma', icon: SimpleIcons.siPrisma, color: '#2D3748' },
    { name: 'JavaScript', icon: SimpleIcons.siJavascript, color: '#F7DF1E' },
    { name: 'Astro', icon: SimpleIcons.siAstro, color: '#FF5D01' }
];

const radius = 250; // Radius of the 3D cylinder
const angleStep = 360 / technologies.length;
---

<section class="tech-stack-section">
    <h2 class="section-title">Core Technologies</h2>
    <p class="section-subtitle">Holographic Proficiency Engine</p>

    <!-- 3D Cylinder for desktop -->
    <div class="cylinder-container theme-hover">
        <div class="cylinder">
            {technologies.map((tech, index) => (
                <div 
                    class="tech-card"
                    style={`
                        --index: ${index}; 
                        --color: ${tech.color}; 
                        --angle: ${index * angleStep}deg; 
                        --radius: ${radius}px;
                    `}
                    title={tech.name}
                >
                    <div class="tech-icon-wrapper">
                        <Fragment 
                            set:html={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">${tech.icon.svg}</svg>`} 
                        />
                    </div>
                </div>
            ))}
        </div>
    </div>

    <!-- Flat grid for mobile -->
    <div class="mobile-tech-grid">
        {technologies.map((tech) => (
            <div class="mobile-tech-item" style={`--color: ${tech.color}`}>
                <div class="mobile-icon-wrapper">
                    <Fragment
                        set:html={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">${tech.icon.svg}</svg>`}
                    />
                </div>
                <span class="mobile-tech-name">{tech.name}</span>
            </div>
        ))}
    </div>
</section>

<style define:vars={{
    transitionDuration: `${UX_CONFIG.TRANSITION_DURATION}ms`
}}>
    .tech-stack-section {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 4rem 2rem;
        perspective: 1000px;
        overflow: hidden;
        text-align: center;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary);
        margin: 0 0 0.5rem;
        font-family: 'Orbitron', sans-serif;
        text-shadow: 0 0 10px rgba(var(--primary-rgb), 0.5);
    }

    .section-subtitle {
        color: var(--text-secondary);
        opacity: 0.7;
        margin: 0 0 3rem;
    }

    /* Mobile grid - hidden on desktop */
    .mobile-tech-grid {
        display: none;
    }

    .cylinder-container {
        width: 100%;
        height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
        transform-style: preserve-3d;
        mask-image: linear-gradient(to right, transparent 0%, black 20%, black 80%, transparent 100%);
    }

    .cylinder {
        position: relative;
        width: 60px;
        height: 60px;
        transform-style: preserve-3d;
        animation: rotate 30s linear infinite;
    }

    .cylinder:hover {
        animation-play-state: paused;
    }

    .tech-card {
        position: absolute;
        width: 60px;
        height: 60px;
        left: 0;
        top: 0;
        transform: rotateY(var(--angle)) translateZ(var(--radius));
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease, filter 0.3s ease;
    }

    .tech-icon-wrapper {
        width: 100%;
        height: 100%;
        background: color-mix(in srgb, var(--bg-secondary) 80%, transparent);
        border: 1px solid color-mix(in srgb, var(--color) 50%, transparent);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 15px color-mix(in srgb, var(--color) 20%, transparent);
        padding: 12px;
        transition: all 0.3s ease;
    }

    .tech-card:hover .tech-icon-wrapper {
        background: color-mix(in srgb, var(--color) 20%, transparent);
        box-shadow: 0 0 30px var(--color);
        transform: scale(1.2);
        border-color: var(--color);
    }

    .tech-icon-wrapper svg {
        width: 100%;
        height: 100%;
        fill: var(--color);
        transition: fill 0.3s ease;
    }

    @keyframes rotate {
        from { transform: rotateX(-5deg) rotateY(0deg); }
        to { transform: rotateX(-5deg) rotateY(360deg); }
    }

    @media (max-width: 768px) {
        .tech-stack-section {
            margin: 2rem 0;
            padding: 2rem 1rem;
            width: 100%;
            max-width: 100%;
            border-radius: 0;
        }

        .section-title {
            font-size: 1.8rem;
        }

        .section-subtitle {
            margin-bottom: 2rem;
        }

        /* Hide 3D on mobile, show grid */
        .cylinder-container {
            display: none;
        }

        .mobile-tech-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }

        .mobile-tech-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 0.5rem;
            background: color-mix(in srgb, var(--color) 8%, transparent);
            border: 1px solid color-mix(in srgb, var(--color) 25%, transparent);
            border-radius: 12px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .mobile-tech-item:active {
            transform: scale(0.95);
        }

        .mobile-icon-wrapper {
            width: 40px;
            height: 40px;
        }

        .mobile-icon-wrapper svg {
            width: 100%;
            height: 100%;
            fill: var(--color);
        }

        .mobile-tech-name {
            font-size: 0.7rem;
            color: var(--text-secondary);
            font-weight: 500;
            text-align: center;
        }
    }

    @media (max-width: 480px) {
        .mobile-tech-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 0.75rem;
        }
    }
</style>

