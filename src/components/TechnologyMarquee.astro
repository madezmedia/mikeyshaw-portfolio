---
import * as SimpleIcons from 'simple-icons';
import { UX_CONFIG } from '../utils/ux';

type Technology = {
    name: string;
    icon: { svg: string };
    color: string;
};

const technologies: Technology[] = [
    { name: 'JavaScript', icon: SimpleIcons.siJavascript, color: '#F7DF1E' },
    { name: 'TypeScript', icon: SimpleIcons.siTypescript, color: '#3178C6' },
    { name: 'React', icon: SimpleIcons.siReact, color: '#61DAFB' },
    { name: 'Node.js', icon: SimpleIcons.siNodedotjs, color: '#339933' },
    { name: 'Docker', icon: SimpleIcons.siDocker, color: '#2496ED' },
    { name: 'GraphQL', icon: SimpleIcons.siGraphql, color: '#E10098' },
    { name: 'Kubernetes', icon: SimpleIcons.siKubernetes, color: '#326CE5' },
    { name: 'Rust', icon: SimpleIcons.siRust, color: '#000000' },
    { name: 'Next.js', icon: SimpleIcons.siNextdotjs, color: '#000000' },
    { name: 'Astro', icon: SimpleIcons.siAstro, color: '#FF5D01' },
    { name: 'Three.js', icon: SimpleIcons.siThreedotjs, color: '#000000' }
];
---

<section class="tech-marquee-section">
    <div class="tech-marquee-header">
        <h2 class="section-title">Technology Stack</h2>
        <p class="section-subtitle">Tools & Technologies</p>
    </div>

    <div class="tech-marquee-container">
        <div class="tech-track">
            {technologies.map((tech) => (
                <div 
                    class="tech-icon" 
                    title={tech.name}
                    data-tooltip={tech.name}
                    style={`--tech-color: ${tech.color}`}
                >
                    <div class="tech-icon-wrapper">
                        <Fragment 
                            set:html={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="var(--tech-icon-color)">${tech.icon.svg}</svg>`} 
                        />
                    </div>
                </div>
            ))}
            {technologies.map((tech) => (
                <div 
                    class="tech-icon" 
                    title={tech.name}
                    data-tooltip={tech.name}
                    style={`--tech-color: ${tech.color}`}
                >
                    <div class="tech-icon-wrapper">
                        <Fragment 
                            set:html={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="var(--tech-icon-color)">${tech.icon.svg}</svg>`} 
                        />
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style define:vars={{
    transitionDuration: `${UX_CONFIG.TRANSITION_DURATION}ms`
}}>
    .tech-marquee-section {
        width: 100%;
        background: color-mix(in srgb, var(--bg-primary) 80%, transparent);
        padding: 2rem 0;
        overflow: hidden;
    }

    .tech-marquee-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary);
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .section-subtitle {
        color: var(--text-secondary);
        opacity: 0.7;
        margin-top: 0.5rem;
    }

    .tech-marquee-container {
        width: 100%;
        overflow: hidden;
    }

    .tech-track {
        display: inline-flex;
        animation: marquee 30s linear infinite;
        width: max-content;
    }

    .tech-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 1rem;
        transition: transform var(--transitionDuration) ease;
    }

    .tech-icon-wrapper {
        width: 60px;
        height: 60px;
        background: color-mix(in srgb, var(--tech-color) 10%, transparent);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 
            transform var(--transitionDuration) ease,
            background var(--transitionDuration) ease;
    }

    .tech-icon:hover .tech-icon-wrapper {
        transform: scale(1.1);
        background: color-mix(in srgb, var(--tech-color) 20%, transparent);
    }

    .tech-icon svg {
        width: 40px;
        height: 40px;
        transition: fill var(--transitionDuration) ease;
        fill: var(--tech-icon-color-dark);
    }

    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }

    @media (max-width: 768px) {
        .tech-track {
            animation: mobile-marquee 20s linear infinite;
        }

        .tech-icon {
            margin: 0 0.5rem;
        }

        .tech-icon-wrapper {
            width: 50px;
            height: 50px;
        }

        .tech-icon svg {
            width: 30px;
            height: 30px;
        }

        @keyframes mobile-marquee {
            0% { transform: translateX(0); }
            100% { transform: translateX(-75%); }
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const techIcons = document.querySelectorAll('.tech-icon');
        
        techIcons.forEach(icon => {
            icon.addEventListener('mouseenter', function() {
                const techColor = this.style.getPropertyValue('--tech-color');
                this.style.setProperty('--tech-icon-color', techColor);
            });

            icon.addEventListener('mouseleave', function() {
                this.style.setProperty('--tech-icon-color', 'currentColor');
            });
        });
    });
</script>
