---
import { UX_CONFIG } from '../utils/ux';

interface Testimonial {
    name: string;
    role: string;
    company: string;
    quote: string;
    avatar: string;
    rating: number;
    color: string;
}

const testimonials: Testimonial[] = [
    {
        name: 'Sarah Thompson',
        role: 'CTO',
        company: 'TechInnovate',
        quote: 'Mad EZ Media transformed our digital strategy with their cutting-edge AI solutions. Their expertise is unparalleled.',
        avatar: 'https://randomuser.me/api/portraits/women/68.jpg',
        rating: 5,
        color: '#28A745'
    },
    {
        name: 'Michael Rodriguez',
        role: 'Founder',
        company: 'StartupEdge',
        quote: 'The team\'s ability to blend advanced technology with intuitive design is remarkable. They truly understand modern digital landscapes.',
        avatar: 'https://randomuser.me/api/portraits/men/32.jpg',
        rating: 4.5,
        color: '#D4AF37'
    },
    {
        name: 'Emily Chen',
        role: 'Product Manager',
        company: 'DataDrive Solutions',
        quote: 'Exceptional AI-driven solutions that have revolutionized our product development process. Highly recommended!',
        avatar: 'https://randomuser.me/api/portraits/women/44.jpg',
        rating: 5,
        color: '#708090'
    }
];
---

<section class="testimonials-section">
    <div class="section-header">
        <h2 class="section-title">Client Testimonials</h2>
        <p class="section-subtitle">Transforming Visions into Digital Realities</p>
    </div>

    <div class="testimonials-grid">
        {testimonials.map((testimonial) => (
            <div 
                class="testimonial-card" 
                style={`--testimonial-color: ${testimonial.color}`}
            >
                <div class="testimonial-header">
                    <div class="testimonial-avatar-container">
                        <img 
                            src={testimonial.avatar} 
                            alt={`${testimonial.name}'s Avatar`} 
                            class="testimonial-avatar"
                        />
                    </div>
                    <div class="testimonial-info">
                        <h3 class="testimonial-name">{testimonial.name}</h3>
                        <p class="testimonial-role">
                            {testimonial.role} @ {testimonial.company}
                        </p>
                    </div>
                </div>

                <div class="testimonial-content">
                    <blockquote class="testimonial-quote">
                        "{testimonial.quote}"
                    </blockquote>
                </div>

                <div class="testimonial-footer">
                    <div class="testimonial-rating">
                        {Array.from({ length: 5 }, (_, i) => (
                            <span 
                                class={`rating-star ${i < Math.floor(testimonial.rating) ? 'filled' : ''}`}
                            >
                                â˜…
                            </span>
                        ))}
                        <span class="rating-value">
                            {testimonial.rating.toFixed(1)}
                        </span>
                    </div>
                </div>
            </div>
        ))}
    </div>
</section>

<style define:vars={{
    transitionDuration: `${UX_CONFIG.TRANSITION_DURATION}ms`
}}>
    .testimonials-section {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 2rem;
        background: color-mix(in srgb, var(--bg-primary) 80%, transparent);
        border-radius: 16px;
        border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
        transition: background-color var(--transitionDuration) ease;
    }

    .section-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary);
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .section-subtitle {
        color: var(--text-secondary);
        opacity: 0.7;
        margin-top: 0.5rem;
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .testimonial-card {
        background: color-mix(in srgb, var(--testimonial-color) 10%, transparent);
        border-radius: 16px;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        transition: 
            transform var(--transitionDuration) ease,
            box-shadow var(--transitionDuration) ease;
        position: relative;
        overflow: hidden;
    }

    .testimonial-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
            circle at center, 
            color-mix(in srgb, var(--testimonial-color) 20%, transparent) 0%, 
            transparent 70%
        );
        opacity: 0;
        transition: opacity var(--transitionDuration) ease;
        z-index: 1;
    }

    .testimonial-card:hover {
        transform: scale(1.05) rotateX(5deg);
        box-shadow: 
            0 15px 30px color-mix(in srgb, var(--testimonial-color) 30%, transparent),
            0 10px 20px color-mix(in srgb, var(--testimonial-color) 20%, transparent);
    }

    .testimonial-card:hover::before {
        opacity: 1;
    }

    .testimonial-header {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .testimonial-avatar-container {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--testimonial-color);
        transition: transform var(--transitionDuration) ease;
    }

    .testimonial-card:hover .testimonial-avatar-container {
        transform: rotate(360deg);
    }

    .testimonial-avatar {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .testimonial-info {
        flex-grow: 1;
    }

    .testimonial-name {
        font-size: 1.2rem;
        color: var(--testimonial-color);
        margin: 0;
    }

    .testimonial-role {
        color: var(--text-secondary);
        opacity: 0.7;
        margin: 0.25rem 0 0;
    }

    .testimonial-content {
        flex-grow: 1;
    }

    .testimonial-quote {
        font-style: italic;
        color: var(--text-secondary);
        line-height: 1.6;
        margin: 0;
    }

    .testimonial-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .testimonial-rating {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .rating-star {
        color: var(--text-secondary);
        opacity: 0.3;
        font-size: 1.2rem;
    }

    .rating-star.filled {
        color: var(--testimonial-color);
        opacity: 1;
    }

    .rating-value {
        margin-left: 0.5rem;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    @media (max-width: 1024px) {
        .testimonials-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .testimonials-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
