---
import { UX_CONFIG } from '../utils/ux';
import SocialLinks from './SocialLinks.astro';

interface HeroProps {
    name: string;
    taglines: string[];
    description: string;
}

const { 
    name = "Mikey Shaw", 
    taglines = ['Innovator', 'Full Stack Developer', 'AI & Web3 Enthusiast'],
    description = "A passionate digital architect transforming complex challenges into innovative technological solutions."
} = Astro.props;
---

<section id="hero" class="advanced-hero">
    
    <div class="hero-grid">
        <div class="hero-content">
            <div class="hero-intro">
                <div class="code-terminal theme-hover">
                    <div class="terminal-header">
                        <span class="terminal-dot minimize"></span>
                        <span class="terminal-dot maximize"></span>
                        <span class="terminal-dot close"></span>
                    </div>
                    <div class="terminal-body">
                        <code>
                            <span class="terminal-prompt">âžœ</span> 
                            <span class="terminal-path">~/digital-architect</span> 
                            <span class="terminal-command">whoami</span>
                            <br />
                            <span class="terminal-result typing-effect">> {name}<span class="cursor">_</span></span>
                        </code>
                    </div>
                </div>
            </div>

            <h1 class="hero-title">
                <span id="dynamic-tagline"></span><span class="cursor">|</span>
            </h1>

            <p class="hero-description animate-subtle-scale">{description}</p>

            <div class="hero-cta">
                <a 
                    href="#projects" 
                    class="btn btn-primary hover-lift"
                    data-ux-interaction="true"
                >
                    <span>View Portfolio</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M13 5l7 7-7 7M5 12h14"></path>
                    </svg>
                </a>
                <a 
                    href="#contact" 
                    class="btn btn-secondary hover-lift"
                    data-ux-interaction="true"
                >
                    <span>Let's Connect</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                    </svg>
                </a>
            </div>
        </div>

        <div class="hero-visual">
            <div class="code-background theme-hover">
                <pre class="code-snippet"><code>
<span class="keyword">class</span> <span class="class-name">DigitalArchitect</span> {"{"} 
    <span class="method">constructor</span>() {"{"}
        <span class="comment">// Crafting innovative solutions</span>
        <span class="keyword">this</span>.skills = [
            <span class="string">'AI'</span>,
            <span class="string">'Web3'</span>,
            <span class="string">'Full Stack'</span>
        ];
    {"}"}

    <span class="method">innovate</span>() {"{"}
        <span class="keyword">return</span> <span class="string">'Transforming Ideas'</span>;
    {"}"}
{"}"}</code></pre>
            </div>
        </div>
    </div>
</section>

<script define:vars={{ taglines }}>
    document.addEventListener('DOMContentLoaded', () => {
        // Typing Effect
        const taglineElement = document.getElementById('dynamic-tagline');
        let currentTaglineIndex = 0;
        let charIndex = 0;
        let isDeleting = false;
        let typeSpeed = 100;

        function type() {
            const currentTagline = taglines[currentTaglineIndex];
            
            if (isDeleting) {
                taglineElement.textContent = currentTagline.substring(0, charIndex - 1);
                charIndex--;
                typeSpeed = 50;
            } else {
                taglineElement.textContent = currentTagline.substring(0, charIndex + 1);
                charIndex++;
                typeSpeed = 100;
            }

            if (!isDeleting && charIndex === currentTagline.length) {
                isDeleting = true;
                typeSpeed = 2000; // Pause at end
            } else if (isDeleting && charIndex === 0) {
                isDeleting = false;
                currentTaglineIndex = (currentTaglineIndex + 1) % taglines.length;
                typeSpeed = 500; // Pause before new word
            }

            setTimeout(type, typeSpeed);
        }

        type();

        // Particle system moved to global ParticleBackground component
    });
</script>

<style>
    :root {
        --hero-bg-dark: #121212;
        --hero-bg-gradient-dark: color-mix(in srgb, #121212 95%, #D4AF37);
        --hero-text-primary-dark: #E0E0E0;
        --hero-text-secondary-dark: #C0C0C0;
        --hero-accent-dark: #D4AF37;
        --hero-terminal-bg-dark: #1E1E1E;
        --hero-terminal-header-dark: #2C2C2C;
    }

    .advanced-hero {
        min-height: 90vh;
        display: flex;
        align-items: center;
        background: transparent;
        color: var(--hero-text-primary-dark);
        overflow: hidden;
        position: relative;
    }


    .hero-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        max-width: 100%;
        margin: 0 auto;
        padding: 1rem 2rem;
        gap: 1.5rem;
        position: relative;
        z-index: 2;
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .code-terminal {
        background: var(--hero-terminal-bg-dark);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        max-width: 400px;
        margin-bottom: 0.5rem;
    }

    .terminal-header {
        display: flex;
        align-items: center;
        background: var(--hero-terminal-header-dark);
        padding: 8px;
    }

    .terminal-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin-right: 6px;
    }
    .terminal-dot.minimize { background: #C0C0C0; }
    .terminal-dot.maximize { background: #708090; }
    .terminal-dot.close { background: #D4AF37; }

    .terminal-body {
        padding: 0.75rem;
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
        color: var(--hero-text-primary-dark);
    }

    .terminal-prompt { color: #C0C0C0; }
    .terminal-path { color: var(--hero-accent-dark); }
    .terminal-command { color: #708090; }
    .terminal-result { color: var(--hero-text-primary-dark); }

    .hero-title {
        display: flex;

        align-items: center;
        gap: 0.25rem;
        font-size: 2.75rem;
        font-weight: 900;
        min-height: 3.5rem; /* Prevent layout shift */
    }

    .cursor {
        display: inline-block;
        width: 10px;
        background-color: var(--hero-accent-dark);
        animation: blink 1s infinite;
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    .hero-description {
        max-width: 500px;
        color: var(--hero-text-secondary-dark);
        opacity: 0.8;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .hero-cta {
        display: flex;
        gap: 0.75rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1.25rem;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .btn-primary {
        background: var(--hero-accent-dark);
        color: var(--hero-bg-dark);
    }
    .btn-secondary {
        border: 2px solid var(--hero-accent-dark);
        color: var(--hero-accent-dark);
    }

    .hero-visual {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .code-background {
        background: var(--hero-terminal-bg-dark);
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
        max-width: 500px;
    }

    .code-snippet {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        color: var(--hero-text-primary-dark);
        margin: 0;
        white-space: pre-wrap;
    }

    .keyword { color: #708090; }
    .class-name { color: var(--hero-accent-dark); }
    .method { color: #C0C0C0; }
    .comment { color: #708090; opacity: 0.7; }
    .string { color: var(--hero-accent-dark); }

    @media (max-width: 1024px) {
        .hero-grid {
            grid-template-columns: 1fr;
            text-align: center;
        }
        .hero-content {
            align-items: center;
        }
        .hero-visual {
            display: none;
        }
    }
</style>
