---

<section id="company-profile" class="company-profile">
    <div class="section-header">
        <h2 class="section-title">My Company</h2>
        <div class="divider"></div>
    </div>

    <div class="company-content">
        <div class="company-intro">
            <div class="logo-container">
                <img 
                    src={companyLogo} 
                    alt="Mad EZ Media Logo" 
                    class="company-logo" 
                    width="auto"
                    height="60"
                    loading="lazy"
                />
            </div>
            <h3 class="company-name">Mad EZ Media and Technology Partners</h3>
            <p class="company-tagline">Empowering Businesses with AI & Automation</p>
            
            <div class="company-description">
                <p>A leading agency specializing in AI and automation integration and consulting services. Our mission is to enable businesses to thrive in the digital age by leveraging the power of AI and automation.</p>
            </div>

            <div class="company-social-links">
                {socialLinks.map((link) => (
                    <a 
                        href={link.url} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="social-link" 
                        title={link.name}
                    >
                        <Fragment set:html={link.icon} />
                        <span class="sr-only">{link.name}</span>
                    </a>
                ))}
            </div>
        </div>

        <div class="company-details">
            <div class="company-website-preview">
                <LinkPreview 
                    id="https://madezmedia.co"
                />
            </div>

            <div class="company-services">
                <h4>Our Services</h4>
                <ul>
                    {services.map((service) => (
                        <li class="service-item">{service}</li>
                    ))}
                </ul>
            </div>

            <div class="company-contact">
                <h4>Contact Information</h4>
                <p><strong>Email:</strong> ai@madezmedia.co</p>
                <p><strong>Phone:</strong> 1 443-764-8512</p>
                <p><strong>Address:</strong> 1914 J N Pease Pl, Charlotte, NC 28262</p>
            </div>
        </div>
    </div>
</section>

<style>
    .company-profile {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 2rem;
        background: rgba(var(--accent-dark), 0.1);
        border-radius: 12px;
        border: 1px solid rgba(var(--accent-light), 0.1);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin: 0;
    }

    .divider {
        flex-grow: 1;
        height: 2px;
        background: linear-gradient(to right, var(--primary-color), transparent);
    }

    .company-content {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
        align-items: start;
    }

    .logo-container {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .company-logo {
        max-height: 60px;
        width: auto;
        object-fit: contain;
    }

    .company-intro {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1rem;
    }

    .company-name {
        color: var(--primary-color);
        margin: 0;
        font-size: 1.5rem;
    }

    .company-tagline {
        color: var(--secondary-color);
        font-style: italic;
        margin: 0.5rem 0;
    }

    .company-description {
        opacity: 0.9;
        margin-bottom: 1rem;
    }

    .company-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .company-website-preview {
        grid-column: 1 / -1;
        margin-bottom: 1.5rem;
    }

    /* LinkPreview Custom Styling */
    :global(.link-preview) {
        --link-preview-corners: 8px;
        --link-preview-padding-inline: 1rem;
        --link-preview-padding-block: 0.75rem;
        background: rgba(var(--accent-light), 0.05) !important;
        border: none !important;
        box-shadow: none !important;
    }

    :global(.link-preview a) {
        color: var(--primary-color) !important;
    }

    :global(.link-preview img) {
        max-height: 200px !important;
        object-fit: cover !important;
    }

    .company-services, .company-contact {
        background: rgba(var(--accent-light), 0.05);
        padding: 1rem;
        border-radius: 8px;
    }

    .company-services ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .service-item {
        background: rgba(var(--accent-light), 0.1);
        margin: 0.5rem 0;
        padding: 0.5rem;
        border-radius: 4px;
        transition: background 0.3s ease;
    }

    .service-item:hover {
        background: rgba(var(--accent-light), 0.2);
    }

    .company-social-links {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        background: rgba(var(--accent-light), 0.1);
        border-radius: 50%;
        color: rgb(var(--accent-light));
        border: 1px solid rgba(var(--accent-light), 0.2);
        transition: all 0.3s ease;
    }

    .social-link:hover {
        background: rgba(var(--accent-light), 0.2);
        transform: translateY(-2px);
        color: white;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    @media (max-width: 768px) {
        .company-content {
            grid-template-columns: 1fr;
        }

        .company-details {
            grid-template-columns: 1fr;
        }
    }
</style>
