---

<section id="company-profile" class="company-profile-container">
    <div class="card-wrapper">
        <div class="section-header">
            <h2 class="section-title">Mad EZ Media</h2>
            <div class="divider"></div>
        </div>

        <div class="company-content">
            <div class="company-logo-container">
                <Image 
                    src={madEZMediaLogo}
                    alt="Mad EZ Media Logo" 
                    width={250} 
                    height={250} 
                    class="company-logo"
                    loading="lazy"
                />
            </div>
            
            <div class="company-info">
                <h3>Innovative Technology Solutions</h3>
                <p class="company-description">
                    Mad EZ Media is a cutting-edge technology company specializing in AI-driven solutions, 
                    automation, and digital transformation. We leverage advanced technologies to solve 
                    complex business challenges and drive operational efficiency.
                </p>
                
                <div class="company-stats">
                    <div class="stat-item">
                        <span class="stat-number">5+</span>
                        <span class="stat-label">Years of Innovation</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">20+</span>
                        <span class="stat-label">Successful Projects</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">10+</span>
                        <span class="stat-label">Industries Served</span>
                    </div>
                </div>

                <div class="services-section">
                    <h4>Our Services</h4>
                    <ul class="services-list">
                        {services.map(service => (
                            <li class="service-item">{service}</li>
                        ))}
                    </ul>
                </div>

                <div class="social-links">
                    {socialLinks.map(link => (
                        <a 
                            href={link.url} 
                            target="_blank" 
                            rel="noopener noreferrer" 
                            class="social-link"
                            title={link.name}
                        >
                            <Fragment set:html={link.icon} />
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700&display=swap');

    .company-profile-container {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .card-wrapper {
        width: 100%;
        max-width: 1200px;
        background: rgba(var(--accent-dark), 0.1);
        border-radius: 12px;
        border: 1px solid rgba(var(--accent-light), 0.1);
        padding: 2rem;
        box-sizing: border-box;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .divider {
        flex-grow: 1;
        height: 2px;
        background: linear-gradient(to right, var(--primary-color), transparent);
    }

    .company-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
    }

    .company-logo-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .company-logo {
        max-width: 250px;
        max-height: 250px;
        width: 100%;
        height: auto;
        object-fit: contain;
        border-radius: 50%;
        border: 4px solid var(--primary-color);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

    .company-logo:hover {
        transform: scale(1.05);
    }

    .company-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
        text-align: center;
    }

    .company-info h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .company-description {
        color: var(--secondary-color);
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
    }

    .company-stats {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 1rem;
        background: rgba(var(--accent-light), 0.1);
        padding: 1rem;
        border-radius: 8px;
        flex-wrap: wrap;
    }

    .stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .stat-number {
        font-size: 1.8rem;
        color: var(--primary-color);
        font-family: 'Orbitron', sans-serif;
        font-weight: 700;
    }

    .stat-label {
        font-size: 0.8rem;
        color: var(--secondary-color);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .services-section {
        margin-top: 1rem;
    }

    .services-section h4 {
        color: var(--primary-color);
        font-family: 'Orbitron', sans-serif;
        margin-bottom: 0.5rem;
    }

    .services-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
    }

    .service-item {
        background: rgba(var(--accent-light), 0.1);
        padding: 0.3rem 0.8rem;
        border-radius: 4px;
        font-size: 0.8rem;
        color: var(--secondary-color);
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-link {
        color: var(--secondary-color);
        transition: color 0.3s ease, transform 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: rgba(var(--accent-light), 0.1);
        border: 1px solid rgba(var(--accent-light), 0.2);
    }

    .social-link:hover {
        color: white;
        transform: translateY(-3px);
        background: rgba(var(--accent-light), 0.2);
    }

    @media (min-width: 768px) {
        .company-content {
            flex-direction: row;
            gap: 3rem;
        }

        .company-logo-container {
            flex: 0 0 250px;
        }

        .company-info {
            flex: 1;
            text-align: left;
        }

        .company-stats {
            justify-content: space-between;
        }

        .services-list {
            justify-content: flex-start;
        }
    }
</style>
