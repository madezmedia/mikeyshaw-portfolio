---
import { UX_CONFIG } from '../utils/ux';
import SocialLinks from './SocialLinks.astro';

const companyDetails = {
    name: 'Mad EZ Media',
    tagline: 'Innovating Digital Solutions',
    description: 'A forward-thinking digital agency specializing in cutting-edge web technologies, AI-driven solutions, and transformative digital experiences.',
    logo: '/images/mad-ez-media-logo.png',
    foundedYear: 2020,
    expertise: [
        { name: 'Web Development', icon: 'ðŸ’»' },
        { name: 'AI Solutions', icon: 'ðŸ¤–' },
        { name: 'UX/UI Design', icon: 'ðŸŽ¨' },
        { name: 'Digital Strategy', icon: 'ðŸš€' }
    ],
    achievements: [
        { metric: '50+', label: 'Projects Delivered' },
        { metric: '95%', label: 'Client Satisfaction' },
        { metric: '10+', label: 'Technologies Mastered' }
    ]
};
---

<section class="company-profile-section">
    <div class="company-profile-grid">
        <div class="company-logo-container theme-hover">
            <div class="logo-underlay animate-subtle-scale"></div>
            <img 
                src={companyDetails.logo} 
                alt={`${companyDetails.name} Logo`} 
                class="company-logo"
                loading="lazy"
            />
        </div>

        <div class="company-details">
            <div class="company-header">
                <h2 class="company-name">{companyDetails.name}</h2>
                <p class="company-tagline">{companyDetails.tagline}</p>
            </div>

            <div class="company-description-container">
                <p class="company-description">
                    {companyDetails.description}
                </p>
            </div>

            <div class="company-expertise">
                <h3 class="section-title">Core Expertise</h3>
                <div class="expertise-grid">
                    {companyDetails.expertise.map(skill => (
                        <div class="expertise-item theme-hover">
                            <span class="expertise-icon">{skill.icon}</span>
                            <span class="expertise-name">{skill.name}</span>
                        </div>
                    ))}
                </div>
            </div>

            <div class="company-achievements">
                <h3 class="section-title">Company Milestones</h3>
                <div class="achievements-grid">
                    {companyDetails.achievements.map(achievement => (
                        <div class="achievement-item animate-subtle-scale">
                            <span class="achievement-metric">{achievement.metric}</span>
                            <span class="achievement-label">{achievement.label}</span>
                        </div>
                    ))}
                </div>
            </div>

            <div class="company-socials">
                <SocialLinks />
            </div>
        </div>
    </div>
</section>

<style define:vars={{
    transitionDuration: `${UX_CONFIG.TRANSITION_DURATION}ms`
}}>
    .company-profile-section {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 2rem;
        background: color-mix(in srgb, var(--bg-primary) 80%, transparent);
        border-radius: 16px;
        border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
        transition: background-color var(--transitionDuration) ease;
    }

    .company-profile-grid {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
        align-items: center;
    }

    .company-logo-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: transform var(--transitionDuration) ease;
    }

    .logo-underlay {
        position: absolute;
        width: 90%;
        height: 90%;
        background: color-mix(in srgb, var(--bg-primary) 50%, transparent);
        border-radius: 16px;
        filter: blur(10px);
        z-index: 1;
    }

    .company-logo {
        max-width: 300px;
        position: relative;
        z-index: 2;
        border-radius: 16px;
    }

    .company-details {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .company-header {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .company-name {
        font-size: 2.5rem;
        color: var(--primary);
        margin: 0;
        font-family: 'Orbitron', sans-serif;
    }

    .company-tagline {
        color: var(--text-secondary);
        margin: 0;
        opacity: 0.8;
    }

    .company-description-container {
        background: color-mix(in srgb, var(--accent) 10%, transparent);
        padding: 1rem;
        border-radius: 8px;
    }

    .company-description {
        color: var(--text-secondary);
        line-height: 1.6;
        margin: 0;
    }

    .section-title {
        font-size: 1.2rem;
        color: var(--primary);
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .expertise-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .expertise-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem;
        background: color-mix(in srgb, var(--accent) 10%, transparent);
        border-radius: 8px;
        transition: 
            transform var(--transitionDuration) ease,
            background var(--transitionDuration) ease;
    }

    .expertise-item:hover {
        transform: scale(1.05);
        background: color-mix(in srgb, var(--accent) 20%, transparent);
    }

    .expertise-icon {
        font-size: 1.5rem;
        opacity: 0.8;
    }

    .expertise-name {
        font-weight: 600;
        color: var(--text-secondary);
    }

    .achievements-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .achievement-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        background: color-mix(in srgb, var(--primary) 10%, transparent);
        border-radius: 8px;
        transition: transform var(--transitionDuration) ease;
    }

    .achievement-metric {
        font-size: 2rem;
        font-weight: bold;
        color: var(--primary);
    }

    .achievement-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        color: var(--text-secondary);
        opacity: 0.7;
    }

    .company-socials {
        margin-top: 1rem;
    }

    @media (max-width: 768px) {
        .company-profile-grid {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .expertise-grid,
        .achievements-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
