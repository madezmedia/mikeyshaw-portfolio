---

<nav class="navbar">
    <div class="navbar-container">
        <div class="logo-container">
            <a href="#home" class="logo desktop-logo">MIKEY SHAW</a>
        </div>
        
        <div class="nav-controls">
            <div class="theme-toggle desktop" id="theme-toggle" title="Toggle Theme">
                <span class="theme-icon">üåì</span>
            </div>
            
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </div>
        
        <ul class="nav-menu">
            {navLinks.map((link) => (
                <li class="nav-item">
                    <a href={link.href} class="nav-link">
                        <span class="nav-icon">{link.icon}</span>
                        <span class="nav-link-text">{link.name}</span>
