---
import ProjectCard from './ProjectCard.astro';

type ProjectStatus = 'In Progress' | 'Prototype' | 'Completed';

type Project = {
    title: string;
    description: string;
    tech: string[];
    href: string;
    image: string;
    status: ProjectStatus;
};

const projects: Project[] = [
    {
        title: "Repubot MVP",
        description: "AI-powered reputation management platform revolutionizing online brand monitoring.",
        tech: ['AI', 'Node.js', 'React'],
        href: "https://github.com/madezmedia/Repubot",
        image: "/placeholders/project-placeholder.svg",
        status: "In Progress"
    },
    {
        title: "Web3 Marketplace",
        description: "Decentralized e-commerce solution leveraging blockchain technology for secure transactions.",
        tech: ['Solidity', 'React', 'Web3.js'],
        href: "#",
        image: "/placeholders/project-placeholder.svg",
        status: "Prototype"
    },
    {
        title: "AI Content Generator",
        description: "Intelligent content creation tool using advanced natural language processing.",
        tech: ['OpenAI', 'Python', 'Next.js'],
        href: "#",
        image: "/placeholders/project-placeholder.svg",
        status: "In Progress"
    }
];
---

<section id="projects" class="projects-section">
    <div class="section-header">
        <h2 class="section-title">Innovative Projects</h2>
        <div class="divider"></div>
    </div>
    <div class="projects-grid">
        {projects.map((project) => (
            <ProjectCard 
                title={project.title}
                description={project.description}
                tech={project.tech}
                href={project.href}
                image={project.image}
                status={project.status}
            />
        ))}
    </div>
</section>

<style>
    .projects-section {
        max-width: 1200px;
        margin: 4rem auto;
        padding: 2rem;
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--primary-color);
    }

    .divider {
        flex-grow: 1;
        height: 2px;
        background: linear-gradient(to right, var(--primary-color), transparent);
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
